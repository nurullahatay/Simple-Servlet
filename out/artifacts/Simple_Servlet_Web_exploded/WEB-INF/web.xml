<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>NatayMachine</display-name>

    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserRegister</servlet-name>
        <servlet-class>controller.RegUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRegister</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserLogout</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckAvailability</servlet-name>
        <servlet-class>CheckAvailability</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckAvailability</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CheckAvailabilityEmail</servlet-name>
        <servlet-class>CheckAvailabiltyEmail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckAvailabilityEmail</servlet-name>
        <url-pattern>/checkEmail</url-pattern>
    </servlet-mapping>
</web-app>